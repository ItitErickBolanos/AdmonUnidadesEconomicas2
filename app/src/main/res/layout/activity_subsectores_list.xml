<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admonunidadeseconomicas.Sectores_List"
    android:background="@drawable/bg2">

    <TextView
        android:id="@+id/headerSubSectoresTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="LISTA DE SUBSECTORES"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" 
        android:gravity="center"/>
    
    <TextView
        android:id="@+id/headerSubSectoresList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="LISTA DE SUBSECTORES"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" 
        android:layout_below="@+id/sectoresSpin"
        android:gravity="center"/>

    <ListView
        android:id="@+id/subsectoresListado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/headerSubSectoresList"
        android:layout_below="@+id/headerSubSectoresList" >

    </ListView>

    <Spinner
        android:id="@+id/sectoresSpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/headerSubSectoresList"
        android:layout_below="@+id/headerSubSectoresTitle"
        android:background="@drawable/bgspinner"
        android:popupBackground="#000000" />

</RelativeLayout>
